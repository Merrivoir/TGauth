{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/auth",
      "methods": ["GET"],
      "dest": "/api/auth.js"
    },
    {
      "src": "/verify",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/verify.js"
    }
  ]
}
